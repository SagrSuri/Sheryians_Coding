<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EJS File Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom Styles */
        .card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: scale(1.02);
        }
    </style>
</head>

<body class="bg-zinc-900 text-white">
    <div class="container mx-auto p-6">
        <!-- Header -->
        <header class="mb-6">
            <h1 class="text-center text-4xl font-extrabold text-green-400">Create .txt File</h1>
        </header>

        <!-- Form -->
        <section class="mb-6">
            <div class="bg-zinc-800 p-6 rounded-lg shadow-lg">
                <form action="/create" method="post">
                    <input
                        class="block w-full text-green-500 rounded-md outline-none px-4 py-2 mb-4 bg-zinc-700 placeholder-gray-400"
                        type="text"
                        placeholder="File Name"
                        name="title"
                        required
                    />
                    <textarea
                        name="details"
                        class="block w-full mb-4 px-4 py-2 rounded-md outline-none bg-zinc-700 placeholder-gray-400 resize-none"
                        placeholder="Data"
                        required
                    ></textarea>
                    <input
                        class="w-full bg-green-500 text-white font-bold py-2 rounded-md hover:bg-green-600 transition"
                        type="submit"
                        value="Create File"
                    />
                </form>
            </div>
        </section>

        <!-- File Tasks -->
        <section>
            <div class="flex flex-wrap gap-6 justify-center">
                <% if(files.length > 0) { %>
                    <% files.forEach(function(val) { %>
                        <div class="card w-72 bg-zinc-800 p-4 rounded-lg shadow-md transition-transform transform hover:scale-105">
                            <h2 class="text-green-500 text-xl font-semibold mb-2"><%= val %></h2>
                            <div class="flex justify-between">
                                <a href="/files/<%= val %>" class="text-blue-400 hover:underline">Read File</a>
                                <a href="/edit/<%= val %>" class="text-yellow-400 hover:underline">Edit File</a>
                                <a href="/delete/<%= val %>" class="text-red-400 hover:underline">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-gray-500 text-lg">No tasks yet.</p>
                <% } %>
            </div>
        </section>
    </div>
</body>
</html>
